@{
    ViewBag.Title = "Enter New Movies Below!";
}

@model Assignment3.Models.Films

<div>
    <p>Suggest a movie for me to add to my collection using the form below! But beware, if I don't deem the movie good enough to remain in the collection, I reserve the right to remove it.</p>
</div>

<form asp-action="MovieForm" method="post">
    <div>
        <label asp-for="Category">Category</label>
        <input asp-for="Category" />
    </div>

    <div>
        <label asp-for="Title">Title</label>
        <input asp-for="Title" />
    </div>

    <div>
        <label asp-for="Year">Year</label>
        <input asp-for="Year" />
    </div>

    <div>
        <label asp-for="Director">Director</label>
        <input asp-for="Director" />
    </div>

    <div>
        <label asp-for="Rating">Rating</label>
        <!--Drop Down Menu-->
        <select asp-for="Rating" >
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div>
        <label asp-for="Edited">Edited</label>
        <!--Yes/No Option-->
        <select asp-for="Edited" >
            <option value="">Select One</option>
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select>
    </div>

    <div>
        <label asp-for="Lent">Lent To</label>
        <input asp-for="Lent" />
    </div>

    <div>
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" />
    </div>

    <button type="submit">Submit Movie Recommendation</button>

</form>
