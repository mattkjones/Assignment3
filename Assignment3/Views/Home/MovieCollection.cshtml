@{
    ViewBag.Title = "My Movie Collection";
}

@model IEnumerable<Films>

<div>
    <h2>Movies Currently in Collection:</h2>

    <!--Create a table to iterate through the list and add movies based on what has been entered in the form-->
    <table class="table table-striped table-bordered">
        <!--Table Headers-->
        <thead class="thead-dark">
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To:</th><th>Notes</th></tr>
        </thead>
        <tbody>
            <!--Gets every instance within the List-->
            @foreach (Assignment3.Models.Films x in Model)
            {
                <!--Makes sure that Independence Day is not included, even if entered-->
                @if (x.Title != "Independence Day")
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.Lent</td>
                        <td>@x.Notes</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = x.MovieId }, new { @class = "btn btn-sm btn-primary"})
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id = x.MovieId }, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
